<%- include('header'); %>

    <div class="wrapcontent">
        <div class="wrapdtbl">
            <div class="cell">
                <div class="inner">
                    <h1><%= title %></h1>
                    
                    <% if (messages.info) { %>
                        <p class="success"><%= messages.info %></p>
                    <% } %>


                    <% if (userlogin) { %>
                        <h4><a href="/dashboard">Dashboard</a></h4>
                    <% }else{ %>
                        <h4><a href="/login">Dashboard Login</a></h4>
                    <% } %>

                    <div class="clearfix"></div>

                    <form action="/postcontact" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                        <label>Full name</label>
                        <input type="text" name="fullname" autocomplete="off" required>

                        <label>Email</label>
                        <input type="email" name="email" autocomplete="off" required>

                        <label>Phone</label>
                        <input type="text" name="phone" autocomplete="off" required>

                        <label>Country</label>
                        <select name="country">
                            <option>-Select-</option>
                            <% for(var i=0; i < Object.keys(strcountry).length; i++) { %>
                                <option value="<%= strcountry[ Object.keys(strcountry)[i] ] %>"><%= strcountry[ Object.keys(strcountry)[i] ] %></option>
                            <% } %>
                        </select>

                        <input type="submit" name="submit" value="SAVE">

                    </form>
    
                </div>

                    <% if (userlogin) { %>
                        <p class="text-center">Logged as <strong style="font-weight:700;"><%= userlogin %></strong>  <a href="/logout">[ Logout ]</a></p>
                    <% } %>

            </div>
        </div>
    </div>

<%- include('footer'); %>
